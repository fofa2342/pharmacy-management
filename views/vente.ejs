<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vente - SIGPP</title>
    <style>
        /* Réinitialisation des styles par défaut */
        body, h1, h2, p, ul, li {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            min-height: 100vh;
            background-color: #f4f4f4;
        }

        /* Sidebar (menu latéral) */
        .sidebar {
            width: 250px;
            background-color: #4CAF50;
            color: white;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

        .sidebar h2 {
            margin-bottom: 20px;
            font-size: 1.5em;
        }

        .sidebar nav ul {
            list-style-type: none;
        }

        .sidebar nav ul li {
            margin: 15px 0;
        }

        .sidebar nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 1.1em;
        }

        .sidebar nav ul li a:hover {
            text-decoration: underline;
        }

        /* Contenu principal */
        .content {
            flex: 1;
            padding: 20px;
            background-color: white;
            margin-left: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .content header {
            margin-bottom: 20px;
        }

        .content h1 {
            color: #333;
            font-size: 2em;
        }

        .content h2 {
            color: #4CAF50;
            font-size: 1.8em;
            margin-bottom: 10px;
        }

        /* Styles pour les tableaux */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            text-align: left;
            max-width: 30px;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        td:not(.col-nom), th:not(.col-nom) {
            max-width: 10px;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }


        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        /* Pied de page */
        footer {
            text-align: center;
            padding: 10px;
            background-color: #333;
            color: white;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        /* Date et heure en haut à droite */
        #datetime {
            position: fixed;
            top: 10px;
            right: 10px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            font-size: 1em;
            font-weight: bold;
        }

        /* Styles pour le formulaire de vente */
        #venteForm {
            margin-top: 20px;
        }

        #venteForm input[type="number"] {
            width: 60px;
        }

        #venteForm button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            margin-top: 20px;
        }

        #venteForm button:hover {
            background-color: #45a049;
        }

        /* Styles pour le formulaire de filtre */
        .filter-form {
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
            align-items: center;
            flex-wrap: wrap; /* Pour s'adapter aux petits écrans */
        }

        .filter-form label {
            font-weight: bold;
        }

        .filter-form input[type="text"],
        .filter-form select {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .filter-form input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }

        .filter-form input[type="submit"]:hover {
            background-color: #45a049;
        }
    </style>
</head>

<body>
    <!-- Sidebar (menu latéral) -->
    <aside class="sidebar">
        <h2>Menu</h2>
        <nav>
            <ul>
                <li><a href="/">Accueil</a></li>
                <li><a href="/logout">Déconnexion</a></li>
            </ul>
        </nav>
    </aside>

    <!-- Contenu principal -->
    <main class="content">
        <p id="datetime"></p>

        <script>
            function updateDateTime() {
                const now = new Date();
                const date = now.toLocaleDateString('fr-FR');
                const time = now.toLocaleTimeString('fr-FR');
                document.getElementById('datetime').textContent = `${date} ${time}`;
            }

            setInterval(updateDateTime, 1000);
            updateDateTime();
        </script>

        <header>
            <h1>Enregistrement des ventes</h1>
        </header>

        <!-- Formulaire de filtre -->
        <form action="/vente" method="GET" class="filter-form">
            <label for="nom">Nom du produit :</label>
            <input type="text" id="nom" name="nom" placeholder="Rechercher par nom" value="<%= req.query.nom || '' %>">
            <input type="submit" value="Filtrer">
        </form>

        <!-- Formulaire pour sélectionner les produits -->
        <form id="venteForm">
            <table>
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Quantité</th>
                        <th>Prix unitaire</th>
                        <th>Prix total</th>
                    </tr>
                </thead>
                <tbody id="produitsTable">
                    <button type="submit">Enregistrer la vente</button>
                    <% produits.forEach(produit => { %>
                        <tr>
                            <td class="col-nom"> 
                                <select name="produit">
                                    <option value="<%= produit.id %>"><%= produit.nom %> (Stock: <%= produit.quantite %>)</option>
                                </select>
                            </td>
                            <td>
                                <input type="number" name="quantite" min="0" max="<%= produit.quantite %>" value="0">
                            </td>
                            <td><%= produit.prix %></td>
                            <td class="prixTotal"><%= produit.prix %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </form>

        <script>
            // Gestion de la soumission du formulaire
            document.getElementById('venteForm').addEventListener('submit', function(event) {
                event.preventDefault();

                const produits = [];
                const rows = document.querySelectorAll('#produitsTable tr');

                rows.forEach(row => {
                    const idProduit = row.querySelector('select[name="produit"]').value;
                    const quantite = row.querySelector('input[name="quantite"]').value;
                    const prix = parseFloat(row.querySelector('td:nth-child(3)').textContent);

                    if (quantite > 0) {
                        produits.push({
                            id_produit: idProduit,
                            quantite: quantite,
                            prix: prix
                        });
                    }
                });

                // Envoyer les données au serveur
                fetch('/vente', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ produits })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Rediriger vers la page de facture avec l'ID de la vente
                        window.location.href = `/facture/${data.idVente}`;
                    } else {
                        alert("Erreur lors de l'enregistrement de la vente.");
                    }
                })
                .catch(error => {
                    console.error("Erreur réseau :", error);
                    alert("Une erreur réseau s'est produite.");
                });
            });

            // Mettre à jour le prix total lorsque la quantité change
            document.querySelectorAll('input[name="quantite"]').forEach(input => {
                input.addEventListener('change', function() {
                    const row = this.closest('tr');
                    const prixUnitaire = parseFloat(row.querySelector('td:nth-child(3)').textContent);
                    const quantite = this.value;
                    const prixTotal = prixUnitaire * quantite;
                    row.querySelector('.prixTotal').textContent = prixTotal.toFixed(2);
                });
            });
        </script>
    </main>

    <!-- Pied de page -->
    <footer>
        <p>&copy; 2025 SIGPP</p>
    </footer>
</body>

</html>